@model Task3_WorkplaceReservation.Models.EqForWorkViewModel

@{
    ViewData["Title"] = "Edit Equipment for Workplace";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEq">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="WorkplaceId" class="control-label">Workplace Localization</label>
                <select asp-for="WorkplaceId" class="form-control" asp-items="ViewBag.WorkplaceList" disabled></select>
                <input asp-for="WorkplaceId" hidden />
                <span asp-validation-for="WorkplaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquipmentId" class="control-label">Equipment Type</label>
                <select asp-for="EquipmentId" class="form-control" asp-items="ViewBag.EquipmentList" disabled></select>
                <input asp-for="EquipmentId" hidden />
                <span asp-validation-for="EquipmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

