@model Task3_WorkplaceReservation.Models.EqForWorkpViewModel

@{
    ViewData["Title"] = "Add Equipment to Workplace";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEquipment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorkplaceId" class="control-label"></label>
                <select asp-for="WorkplaceId" class="form-control" asp-items="ViewBag.WorkplaceList">
                    <option value="" hidden>--Select Workplace--</option>
                </select>   
                <span asp-validation-for="WorkplaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquipmentId" class="control-label"></label>
                <select asp-for="EquipmentId" class="form-control" asp-items="ViewBag.EquipmentList">
                    <option value="" hidden>--Select Equipment--</option>
                </select>
                <span asp-validation-for="EquipmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

